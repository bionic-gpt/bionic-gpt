{
  "openapi": "3.0.3",
  "info": {
    "title": "SAP Demo Integration API",
    "description": "Sample OpenAPI spec for demoing integration between an LLM and SAP using REST endpoints.",
    "version": "1.0.0",
    "x-logo": {
      "url": "data:image/svg+xml;base64,"
    },
    "x-bionic-slug": "sap"
  },
  "servers": [
    {
      "url": "https://sap.example.com"
    }
  ],
  "paths": {
    "/business-partners": {
      "get": {
        "summary": "Get list of business partners",
        "operationId": "getBusinessPartners",
        "responses": {
          "200": {
            "description": "A list of business partners",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BusinessPartner"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sales-orders": {
      "post": {
        "summary": "Create a new sales order",
        "operationId": "createSalesOrder",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SalesOrderRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sales order created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SalesOrderResponse"
                }
              }
            }
          }
        }
      }
    },
    "/material-stock": {
      "get": {
        "summary": "Check stock availability",
        "operationId": "getMaterialStock",
        "parameters": [
          {
            "name": "materialId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Stock level for the material",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MaterialStock"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BusinessPartner": {
        "type": "object",
        "properties": {
          "BusinessPartner": {
            "type": "string"
          },
          "FirstName": {
            "type": "string"
          },
          "LastName": {
            "type": "string"
          },
          "OrganizationBPName1": {
            "type": "string"
          }
        }
      },
      "SalesOrderRequest": {
        "type": "object",
        "properties": {
          "CustomerId": {
            "type": "string"
          },
          "Items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "MaterialId": {
                  "type": "string"
                },
                "Quantity": {
                  "type": "number"
                }
              },
              "required": [
                "MaterialId",
                "Quantity"
              ]
            }
          }
        },
        "required": [
          "CustomerId",
          "Items"
        ]
      },
      "SalesOrderResponse": {
        "type": "object",
        "properties": {
          "SalesOrderId": {
            "type": "string"
          },
          "Status": {
            "type": "string"
          }
        }
      },
      "MaterialStock": {
        "type": "object",
        "properties": {
          "MaterialId": {
            "type": "string"
          },
          "AvailableQuantity": {
            "type": "number"
          },
          "Unit": {
            "type": "string"
          }
        }
      }
    }
  }
}
