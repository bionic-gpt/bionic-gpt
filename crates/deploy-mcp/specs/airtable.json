{
  "openapi": "3.0.3",
  "info": {
    "title": "Airtable Records & Comments API",
    "version": "1.0.0",
    "description": "API for viewing Airtable records and record comments using OAuth2.",
    "x-logo": {
      "url": "data:image/svg+xml;base64,"
    },
    "x-bionic-slug": "airtable"
  },
  "servers": [
    {
      "url": "https://api.airtable.com/v0",
      "variables": {
        "baseId": {
          "description": "The ID of the Airtable base",
          "default": "app1234567890"
        }
      }
    }
  ],
  "components": {
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "https://airtable.com/oauth2/v1/authorize",
            "tokenUrl": "https://airtable.com/oauth2/v1/token",
            "scopes": {
              "data.records:read": "See the data in records",
              "data.recordComments:read": "See comments in records",
              "schema.bases:read": "See information about bases"
            }
          }
        }
      }
    },
    "schemas": {
      "Record": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "fields": {
            "type": "object",
            "additionalProperties": true
          },
          "createdTime": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "fields"
        ]
      },
      "Comment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "createdTime": {
            "type": "string",
            "format": "date-time"
          },
          "text": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "text"
        ]
      },
      "Base": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "permissionLevel": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "name"
        ]
      }
    }
  },
  "security": [
    {
      "oauth2": [
        "data.records:read",
        "data.recordComments:read",
        "data.bases:read"
      ]
    }
  ],
  "paths": {
    "/meta/bases": {
      "get": {
        "operationId": "listBases",
        "summary": "List available bases",
        "security": [
          {
            "oauth2": [
              "data.bases:read"
            ]
          }
        ],
        "responses": {
          "200": {
            "description": "List of bases",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "bases": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Base"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/{tableName}/records": {
      "get": {
        "operationId": "listRecords",
        "summary": "List records",
        "security": [
          {
            "oauth2": [
              "data.records:read"
            ]
          }
        ],
        "parameters": [
          {
            "name": "tableName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of records",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "records": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Record"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/{tableName}/records/{recordId}": {
      "get": {
        "operationId": "getRecord",
        "summary": "Retrieve a record",
        "security": [
          {
            "oauth2": [
              "data.records:read"
            ]
          }
        ],
        "parameters": [
          {
            "name": "tableName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "recordId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Single record retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Record"
                }
              }
            }
          }
        }
      }
    },
    "/{tableName}/records/{recordId}/comments": {
      "get": {
        "operationId": "listRecordComments",
        "summary": "List comments on a record",
        "security": [
          {
            "oauth2": [
              "data.recordComments:read"
            ]
          }
        ],
        "parameters": [
          {
            "name": "tableName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "recordId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of comments",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "comments": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Comment"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
