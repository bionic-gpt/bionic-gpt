{
  "openapi": "3.0.3",
  "info": {
    "title": "GoatCounter Statistics API",
    "version": "0.1",
    "description": "Statistics-related endpoints from the GoatCounter API.",
    "x-logo": {
      "url": "data:image/svg+xml;base64,"
    },
    "contact": {
      "name": "Martin Tournoij",
      "url": "https://www.goatcounter.com/help/api",
      "email": "support@goatcounter.com"
    },
    "x-bionic-slug": "goatcounter"
  },
  "servers": [
    {
      "url": "https://[my-code].goatcounter.com"
    }
  ],
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "Use the format `Authorization: Bearer <API_KEY>`"
      }
    },
    "schemas": {
      "apiHitsResponse": {
        "type": "object",
        "properties": {
          "hits": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "count": {
                  "type": "integer"
                },
                "max": {
                  "type": "integer"
                },
                "path": {
                  "type": "string"
                },
                "path_id": {
                  "type": "integer"
                },
                "title": {
                  "type": "string"
                }
              }
            }
          },
          "more": {
            "type": "boolean"
          },
          "total": {
            "type": "integer"
          }
        }
      },
      "TotalCount": {
        "type": "object",
        "properties": {
          "total": {
            "type": "integer"
          },
          "total_events": {
            "type": "integer"
          },
          "total_utc": {
            "type": "integer"
          }
        }
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/api/v0/stats/hits": {
      "get": {
        "operationId": "getStatsHits",
        "summary": "Get an overview of pageviews.",
        "tags": [
          "stats"
        ],
        "parameters": [
          {
            "name": "start",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time",
              "default": "one week ago"
            },
            "description": "Start time, should be rounded to the hour."
          },
          {
            "name": "end",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time",
              "default": "current time"
            },
            "description": "End time, should be rounded to the hour."
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 20
            },
            "description": "Maximum number of pages to get."
          },
          {
            "name": "daily",
            "in": "query",
            "schema": {
              "type": "boolean"
            },
            "description": "Group by day instead of hour."
          },
          {
            "name": "include_paths",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "style": "form",
            "explode": false,
            "description": "Only include these paths."
          },
          {
            "name": "exclude_paths",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "style": "form",
            "explode": false,
            "description": "Exclude these paths."
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/apiHitsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v0/stats/total": {
      "get": {
        "operationId": "getStatsTotal",
        "summary": "Count total number of pageviews for a date range.",
        "tags": [
          "stats"
        ],
        "parameters": [
          {
            "name": "start",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time",
              "default": "one week ago"
            },
            "description": "Start time."
          },
          {
            "name": "end",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time",
              "default": "current time"
            },
            "description": "End time."
          },
          {
            "name": "include_paths",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            "style": "form",
            "explode": false,
            "description": "Only include these paths."
          }
        ],
        "responses": {
          "200": {
            "description": "Total counts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TotalCount"
                }
              }
            }
          }
        }
      }
    }
  }
}
