    "environment",
    "git",
    "github",
    "gitlab",
    "jenkins",
    "netlify",
    "puppet",
    "sail",
    "screwdriver",
    "scrutinizer",
    "semaphore",
    "shippable",
    "teamcity",
    "travis",
    "variable",
    "wercker",
    "woodpecker"
  ],
  "license": "MIT",
  "publishConfig": {
